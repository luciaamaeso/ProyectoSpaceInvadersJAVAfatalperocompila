package screens;

import java.awt.Color;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.Timer;
import java.awt.EventQueue;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JLabel;
import javax.swing.ImageIcon;
import javax.swing.SwingConstants;
import javax.swing.JButton;
import java.awt.Color;
import java.awt.Toolkit;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class StartScreen extends JFrame {
    /**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
    private JLabel lblNewLabel;
    private JButton btnNewButton;
    private Timer hoverBlinkTimer; //Tanto este como el siguiente atributo es para el parpadeo del boton
    private boolean blinkOn = false;

    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    StartScreen frame = new StartScreen();
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    public StartScreen() {
        setBackground(new Color(0, 0, 0));
        setResizable(false);
        setIconImage(Toolkit.getDefaultToolkit().getImage(StartScreen.class.getResource("/img/SPACEINVADERSFONDO.png")));
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 700, 471);
        contentPane = new JPanel();
        contentPane.setBorder(null);
        setContentPane(contentPane);
        contentPane.setLayout(null);
        contentPane.add(getLblNewLabel());
        contentPane.add(getBtnNewButton());
        setLocationRelativeTo(null); //este hace que la pantalla se abra en el centro
        
   //Esta es la accion del boton de la nave para abrir GameScreen y cerrar esta
        getBtnNewButton().addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
            	GameScreen game = new GameScreen(); 
            	game.setVisible(true);
                dispose();
            }
        });
    }

    // Aqui creas la label con la imagen de fondo
    private JLabel getLblNewLabel() {
        if (lblNewLabel == null) {
            lblNewLabel = new JLabel("fondillo");
            lblNewLabel.setBounds(0, 0, 694, 442);
            lblNewLabel.setIcon(new ImageIcon(StartScreen.class.getResource("/img/pantallastart.png")));
            lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
        }
        return lblNewLabel;
    }

    // Boton de la nave con icono, para ir a la otra pantallica
    
    private JButton crearBotonNave() {
        ImageIcon icon = new ImageIcon(getClass().getResource("/img/nave.png"));
        JButton btn = new JButton(icon);
        btn.setContentAreaFilled(false);
        btn.setBorderPainted(false);
        btn.setFocusPainted(false);
        btn.setOpaque(false);

        // --- Parpadeo al pasar el ratón ---
        // Guardamos el estado "original" para poder restaurarlo al salir
        final Color originalBg = btn.getBackground();
        final boolean originalOpaque = btn.isOpaque();
        final boolean originalCAF = btn.isContentAreaFilled();

        btn.addMouseListener(new MouseAdapter() {

            @Override
            public void mouseEntered(MouseEvent e) {
                if (hoverBlinkTimer == null) {
                    hoverBlinkTimer = new Timer(180, ev -> {
                        blinkOn = !blinkOn;
                        if (blinkOn) {
                            // Fase "negro"
                            btn.setOpaque(true);
                            btn.setContentAreaFilled(true);
                            btn.setBackground(Color.BLACK);
                        } else {
                            // Fase "color" (restaurar estado original)
                            btn.setBackground(originalBg);
                            btn.setOpaque(originalOpaque);
                            btn.setContentAreaFilled(originalCAF);
                        }
                        btn.repaint();
                    });
                }
                if (!hoverBlinkTimer.isRunning()) {
                    hoverBlinkTimer.start();
                }
            }

            @Override
            public void mouseExited(MouseEvent e) {
                if (hoverBlinkTimer != null) {
                    hoverBlinkTimer.stop();
                }
                // Al salir del botón, restauramos el estado original fijo
                blinkOn = false;
                btn.setBackground(originalBg);
                btn.setOpaque(originalOpaque);
                btn.setContentAreaFilled(originalCAF);
                btn.repaint();
            }
        });
        // --- fin parpadeo ---

        btn.addActionListener(e -> {
            GameScreen game = new GameScreen();
            game.setVisible(true);
            dispose();
        });

        return btn;
    }
}
