package model;


public abstract class SpaceCraft extends Observable {
	// Atributos
	
	protected int x;
	protected int y;
	protected String color;
	// private Shot[] bullets;  esto lo he hecho pensando en el futuro

	
	// Constructora
	
	protected SpaceCraft(int x, int y, String color) {
		this.x = x;
		this.y = y;
		this.color = color;
		this.addObserver(null);  // Aqu√≠ hay que comprobar el nombre
	}
	
	// Moverse
	
	protected void moveLeft() {
		this.x = x - 1;
	}
	
	protected void moveRight() {
		this.x = x+1;
	}
	
	// Disparar
	
	
}
