package screens;

import java.awt.EventQueue;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.ImageIcon;
import java.awt.FlowLayout;
import javax.swing.SwingConstants;
import java.awt.GridLayout;
import javax.swing.JButton;
import javax.swing.UIManager;
import java.awt.Color;
import java.awt.CardLayout;
import java.awt.BorderLayout;
import java.awt.Toolkit;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class StartScreenSpaceship extends JFrame {
    /**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
    private JLabel lblNewLabel;
    private JButton btnNewButton;

    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    StartScreenSpaceship frame = new StartScreenSpaceship();
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    public StartScreenSpaceship() {
        setBackground(new Color(0, 0, 0));
        setResizable(false);
        setIconImage(Toolkit.getDefaultToolkit().getImage(StartScreenSpaceship.class.getResource("/img/SPACEINVADERSFONDO.png")));
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 700, 471);

        contentPane = new JPanel();
        contentPane.setBorder(null);
        setContentPane(contentPane);
        contentPane.setLayout(null);
        contentPane.add(getLblNewLabel());
        contentPane.add(getBtnNewButton());

   //Esta es la acciï¿½n del boton de la nave para abrir GameScreen y cerrar esta
        getBtnNewButton().addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
            	GameScreen game = new GameScreen(); 
            	game.setVisible(true);
                dispose();
            }
        });
    }

    // Aqui creas la label con la imagen de fondo
    private JLabel getLblNewLabel() {
        if (lblNewLabel == null) {
            lblNewLabel = new JLabel("fondillo");
            lblNewLabel.setBounds(0, 0, 694, 442);
            lblNewLabel.setIcon(new ImageIcon(StartScreenSpaceship.class.getResource("/img/pantallastart.png")));
            lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
        }
        return lblNewLabel;
    }

    // Boton de la nave con icono, para ir a la otra pantallica
    private JButton getBtnNewButton() {
        if (btnNewButton == null) {
            ImageIcon icon = new ImageIcon(getClass().getResource("/img/nave.png"));
            btnNewButton = new JButton(new ImageIcon(StartScreenSpaceship.class.getResource("/img/nave.png")));
            btnNewButton.setRolloverIcon(icon);
            btnNewButton.setPressedIcon(icon);
            btnNewButton.setContentAreaFilled(false);
            btnNewButton.setBorderPainted(false);
            btnNewButton.setFocusPainted(false);
            btnNewButton.setOpaque(false);
            btnNewButton.setText(null);
            btnNewButton.setBounds(302, 236, 92, 85);
        }
        return btnNewButton;
    }
}
